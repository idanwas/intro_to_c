#include <stdio.h>
#include <ctype.h>
#include <string.h>
#include "str_quests.h"

void Q1()
{
	char str1[MAX], str2[MAX];

	printf("Please enter a string up to %d chars: \n", MAX);
	scanf("%s", str1);
	printf("String 1 is %s \n", str1);

	getchar(); // clear the buffer from the '\n'

	printf("Please enter a string up to %d chars: \n", MAX);
	fgets(str2, sizeof(str2), stdin);
	printf("String 2 is ");
	puts(str2);



}
